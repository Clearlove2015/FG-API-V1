<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rxjava + retrofit" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_customerinfo"
            android:text="获取会员信息"/>

        <Button
            android:id="@+id/btn_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取会员级别" />

        <EditText
            android:id="@+id/et_update_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_update_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改昵称" />

        <Button
            android:id="@+id/btn_update_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改性别" />

        <Button
            android:id="@+id/btn_goods_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品关注" />

        <Button
            android:id="@+id/btn_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单数量" />

        <Button
            android:id="@+id/btn_order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全部订单" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="浏览历史列表" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clear_history"
            android:text="清空浏览历史"/>

        <Button
            android:id="@+id/btn_point_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="积分列表" />

        <Button
            android:id="@+id/btn_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分类" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_order_detail"
            android:text="订单详情"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_return_detail"
            android:text="退货/退款详情"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_select_img"
            android:text="选择图片"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_uploadimg"
            android:text="上传多张图片到本地服务器"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_uploadimg_single"
            android:text="上传单张图片"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传多张图片到远程服务器"
            android:id="@+id/btn_uploadimgs_remote"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logistics"
            android:text="根据订单号查询物流信息"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_kuaidi"
            android:text="快递100"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_coupon"
            android:text="coupon"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_get_coupons"
            android:text="获取优惠券"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_getaccount"
            android:text="账户明细"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_msg_number"
            android:text="消息数量"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_deleted_goods"
            android:text="删除商品"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_like_login"
            android:text="猜你喜欢（登录）"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_wechat_login"
            android:text="微信登录"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rv"
            android:text="recyclerview列表"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_alipay"
            android:text="支付宝支付"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>
